{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@stock-market/shared-models": ["libs/shared/models/src/index.ts"],
      "@stock-market/stock-market-shell": [
        "libs/stock-market/shell/src/index.ts"
      ],
      "@stock-market/stocks-data-access": [
        "libs/stock-market/stocks/data-access/src/index.ts"
      ],
      "@stock-market/stocks-features-details": [
        "libs/stock-market/stocks/features/details/src/index.ts"
      ],
      "@stock-market/stocks-features-search": [
        "libs/stock-market/stocks/features/search/src/index.ts"
      ],
      "@stock-market/stocks-shell": [
        "libs/stock-market/stocks/features/shell/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
